<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidjj.giftapp.GiftActivity">

    <RelativeLayout
        android:id="@+id/my_gift_actionbar"
        android:layout_width="match_parent"
        android:background="@color/button_u"
        android:layout_height="50dp">

        <Button
            android:onClick="click"
            android:id="@+id/my_gift_back_btn"
            android:background="@color/textTransparent"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的礼包"/>
</RelativeLayout>
    <Button
        android:id="@+id/my_gift_login_btn"
        android:onClick="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="登录"
        android:textColor="@color/btn_selector"
        android:background="@color/button_u"/>

</RelativeLayout>
