<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidjj.giftapp.LoginActivity">

    <RelativeLayout
        android:id="@+id/login_actionbar"
        android:layout_width="match_parent"
        android:background="@color/button_u"
        android:layout_height="50dp">

        <Button
            android:onClick="click"
            android:id="@+id/login_back_btn"
            android:background="@color/textTransparent"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_title_text"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员登录"/>
        <Button
            android:onClick="click"
            android:background="@color/textTransparent"
            android:id="@+id/login_register_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textColor="@color/button_n"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/login_et1"
        android:layout_marginTop="50dp"
        android:paddingLeft="20dp"
        android:hint="请输入ID/邮箱/手机号码"
        android:layout_below="@id/login_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/login_et2"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:hint="请输入密码"
        android:layout_below="@id/login_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/login_et2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_u"
        android:text="立即登录"
        android:textColor="@color/btn_selector"
        />

</RelativeLayout>
