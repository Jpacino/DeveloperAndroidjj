<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidjj.giftapp.SearchActivity">

    <RelativeLayout
        android:id="@+id/search_actionbar"
        android:layout_width="match_parent"
        android:background="@color/button_u"
        android:layout_height="50dp">

        <Button
            android:onClick="click"
            android:id="@+id/search_back_btn"
            android:background="@color/textTransparent"
            android:drawableLeft="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/search_et"
            android:background="@drawable/et_shape"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="35dp"/>
        <Button
            android:onClick="click"
            android:background="@color/textTransparent"
            android:id="@+id/search_search_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="搜索"
            android:textColor="@color/btn_selector"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <ListView
        android:layout_below="@id/search_actionbar"
        android:id="@+id/search_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
