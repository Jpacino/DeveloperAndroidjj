<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/details_tese_right_headview_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:background="@drawable/def_loading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/details_tese_right_headview_rl"
        android:layout_alignTop="@id/details_tese_right_headview_iv"
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:onClick="click"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/fragment3_details_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="新游周刊第89期"
            />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/details_tese_right_headview_circleview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/button_u"
        android:src="@drawable/kaizi"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/details_tese_right_headview_iv"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:padding="10dp"
        android:background="#40000000"
        android:text="新游周刊"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/details_tese_right_headview_circleview"
        android:layout_toRightOf="@id/details_tese_right_headview_circleview"
        android:layout_alignBottom="@id/details_tese_right_headview_iv"
        android:textColor="#ffffff"

        android:id="@+id/details_tese_right_headview_content_tv" />
</RelativeLayout>